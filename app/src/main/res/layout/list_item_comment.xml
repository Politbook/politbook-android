<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/card_frame_middle"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    >

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/ivSocial"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        facebook:preset_size="normal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvNameUser"
        android:text="@string/text"
        android:layout_toEndOf="@+id/ivSocial"
        android:layout_alignParentTop="true"
        android:textColor="@color/black_undo"
        android:layout_toRightOf="@+id/ivSocial" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbRating"
        android:layout_below="@+id/tvNameUser"
        android:layout_toRightOf="@+id/ivSocial"
        android:layout_toEndOf="@+id/ivSocial"
        style="?android:attr/ratingBarStyleSmall"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text"
        android:id="@+id/tvComment"
        android:textColor="@color/black"
        android:layout_below="@+id/rbRating"
        android:layout_toRightOf="@+id/ivSocial"
        android:layout_toEndOf="@+id/ivSocial" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text"
        android:id="@+id/tvDate"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black_undo"
        android:layout_toEndOf="@+id/rbRating"
        android:layout_alignTop="@+id/rbRating"
        android:layout_toRightOf="@+id/rbRating" />
</RelativeLayout>