<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="match_parent"
    android:background="@drawable/list_product">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:id="@+id/ivPhoto"
        android:src="@drawable/photo_transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvNickname"
        android:text="@string/text"
        android:layout_toEndOf="@+id/ivPhoto"
        android:layout_toRightOf="@+id/ivPhoto"
        android:textColor="@color/bt_blue"
        android:layout_below="@+id/ivPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLines="2"
        android:lines="2"
        android:ellipsize="end"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/tvParty"
        android:text="@string/text"
        android:layout_toEndOf="@+id/ivPhoto"
        android:layout_toRightOf="@+id/ivPhoto"
        android:textColor="@color/bt_green"
        android:layout_below="@+id/tvNickname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:maxLines="1"
        android:lines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbRating"
        android:layout_below="@+id/tvParty"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_centerHorizontal="true" />

</RelativeLayout>